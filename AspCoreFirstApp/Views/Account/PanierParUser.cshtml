@model IEnumerable<AspCoreFirstApp.Models.PanierParUser>

@{
    ViewData["Title"] = "Mon Panier";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">

                <div class="card-header bg-warning">
                    <h2 class="mb-0">
                        <i class="bi bi-cart-fill"></i> @ViewData["Title"]
                    </h2>
                </div>

                <div class="card-body">

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID Panier</th>
                                        <th>ID Produit</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ProduitId</td>
                                        <td>
                                            <button class="btn btn-sm btn-danger">
                                                Supprimer
                                            </button>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Votre panier est vide.
                        </div>
                    }

                </div>
            </div>

            <div class="mt-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour Ã  l'accueil
                </a>
            </div>

        </div>
    </div>
</div>
