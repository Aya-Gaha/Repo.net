@model AspCoreFirstApp.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Créer un compte";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); margin: -1rem -15px 0 -15px; padding: 2rem 15px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="row g-0 shadow-lg rounded-4 overflow-hidden" style="background: white;">
                    <!-- Left side - Welcome/Info -->
                    <div class="col-md-6 d-none d-md-block" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); position: relative;">
                        <div class="d-flex flex-column justify-content-center h-100 p-5 text-white">
                            <div class="mb-4">
                                <i class="bi bi-person-plus-fill" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="fw-bold mb-3">Rejoignez Movies App</h2>
                            <p class="lead mb-4">Créez votre compte gratuitement et commencez à gérer votre collection de films dès maintenant.</p>
                            <div class="mt-auto">
                                <p class="mb-2"><i class="bi bi-check-circle-fill me-2"></i> Inscription rapide et gratuite</p>
                                <p class="mb-2"><i class="bi bi-check-circle-fill me-2"></i> Accès à toutes les fonctionnalités</p>
                                <p class="mb-2"><i class="bi bi-check-circle-fill me-2"></i> Interface sécurisée</p>
                                <p class="mb-0"><i class="bi bi-check-circle-fill me-2"></i> Support technique disponible</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right side - Register Form -->
                    <div class="col-md-6">
                        <div class="p-5">
                            <div class="text-center mb-4">
                                <h3 class="fw-bold mb-2">Inscription</h3>
                                <p class="text-muted">Créez votre compte en quelques secondes</p>
                            </div>

                            <form asp-action="Register" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">
                                        <i class="bi bi-envelope me-1"></i>Email
                                    </label>
                                    <input asp-for="Email" class="form-control form-control-lg rounded-3" placeholder="exemple@email.com" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label fw-semibold">
                                        <i class="bi bi-geo-alt me-1"></i>Ville
                                    </label>
                                    <input asp-for="City" class="form-control form-control-lg rounded-3" placeholder="Votre ville" />
                                    <span asp-validation-for="City" class="text-danger small"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label fw-semibold">
                                        <i class="bi bi-lock me-1"></i>Mot de passe
                                    </label>
                                    <input asp-for="Password" class="form-control form-control-lg rounded-3" placeholder="••••••••" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                    <div class="form-text small">Minimum 6 caractères avec majuscule, minuscule et chiffre</div>
                                </div>
                                
                                <div class="mb-4">
                                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                        <i class="bi bi-lock-fill me-1"></i>Confirmer le mot de passe
                                    </label>
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-3" placeholder="••••••••" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                                
                                <div class="d-grid mb-4">
                                    <button type="submit" class="btn btn-lg rounded-3" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border: none; color: white; font-weight: 600;">
                                        <i class="bi bi-person-check me-2"></i>Créer mon compte
                                    </button>
                                </div>
                            </form>
                            
                            <div class="text-center">
                                <hr class="my-4">
                                <p class="text-muted mb-0">
                                    Vous avez déjà un compte ? 
                                    <a asp-action="Login" class="fw-semibold text-decoration-none" style="color: #f5576c;">
                                        Se connecter
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
