@{
    ViewData["Title"] = "Accès refusé";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-shield-x"></i> @ViewData["Title"]</h2>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">Vous n'avez pas accès à cette ressource</h4>
                    <p class="text-muted">Vous devez être connecté et avoir les permissions appropriées pour accéder à cette page.</p>
                    
                    <div class="mt-4">
                        <a asp-action="Login" asp-controller="Account" class="btn btn-primary me-2">Se connecter</a>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Retour à l'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
