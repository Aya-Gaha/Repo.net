@model IEnumerable<AspCoreFirstApp.Models.ApplicationUser>

@{
    ViewData["Title"] = "Gestion des utilisateurs";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="bi bi-people-fill"></i> @ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Email</th>
                                        <th>Nom d'utilisateur</th>
                                        <th>Ville</th>
                                        <th>Compte confirmé</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Email</td>
                                            <td>@user.UserName</td>
                                            <td>@(user.City ?? "Non spécifiée")</td>
                                            <td>
                                                @if (user.EmailConfirmed)
                                                {
                                                    <span class="badge bg-success">Oui</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Non</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i> Aucun utilisateur trouvé.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
