@model AspCoreFirstApp.Models.Movie

@{
    ViewData["Title"] = "Détails du film";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title mb-0">Détails du film</h2>
    <div class="page-actions">
        <a class="btn btn-outline-secondary" asp-action="Index">← Retour à la liste</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Modifier</a>
    </div>
</div>

<div class="card app-card">
    <div class="card-body">
        <div class="row g-4 align-items-center">
            <div class="col-12 col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageFile))
                {
                    <img src="~/images/@Model.ImageFile" alt="@Model.Name" class="img-fluid rounded" />
                }
                else
                {
                    <img src="~/inception.jpeg" alt="Placeholder" class="img-fluid rounded" />
                }
            </div>
            <div class="col-12 col-md-8">
                <dl class="row mb-0">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Nom</dt>
                    <dd class="col-sm-9 fw-semibold">@Model.Name</dd>

                    @if (Model.DateAjoutMovie.HasValue)
                    {
                        <dt class="col-sm-3">Ajouté le</dt>
                        <dd class="col-sm-9">@Model.DateAjoutMovie.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>
