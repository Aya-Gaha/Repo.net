@model AspCoreFirstApp.Models.Movie
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Détails du Film</title>
</head>
<style>
    .title {
        margin-bottom: 20px;
        font-weight: bold;
    }

    .movie-table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
    }

    .movie-table th,
    .movie-table td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        text-align: center;
    }

    .movie-table tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    .movie-table a {
        color: #0066ff;
        text-decoration: none;
        font-weight: 500;
    }

    .img-placeholder {
        width: 40px;
        height: 50px;
        border: 1px solid #ccc;
        margin: auto;
        background-color: #fafafa;
    }

    .details-card {
        width: 300px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 6px;
        margin-top: 20px;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        text-decoration: none;
        color: #0066ff;
    }
</style>

<body>
<h2 class="title">Détails du Film</h2>
<div class="details-card">
    <p><strong>ID :</strong> @Model.Id</p>
    <p><strong>Nom :</strong> @Model.Name</p>
</div>

<a class="back-link" href="/Movie/Index">← Retour à la liste</a>
</body>
</html>