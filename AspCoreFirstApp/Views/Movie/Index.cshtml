@model IEnumerable<AspCoreFirstApp.Models.Movie>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<style>
    body {
        font-family: "Segoe UI", Roboto, Arial, sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 40px 0;
        color: #333;
    }

    .title {
        text-align: center;
        margin-bottom: 30px;
        font-size: 28px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .movie-table {
        width: 75%;
        margin: auto;
        border-collapse: collapse;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }

    .movie-table th {
        background-color: #0d6efd;
        color: white;
        font-weight: 500;
        padding: 14px;
        text-transform: uppercase;
        font-size: 13px;
        letter-spacing: 0.6px;
    }

    .movie-table td {
        padding: 14px;
        border-bottom: 1px solid #eee;
        text-align: center;
    }

    .movie-table tr:last-child td {
        border-bottom: none;
    }

    .movie-table tr:hover {
        background-color: #f1f5ff;
        transition: background-color 0.2s ease;
    }

    .movie-table a {
        color: #0d6efd;
        text-decoration: none;
        font-weight: 500;
    }

    .movie-table a:hover {
        text-decoration: underline;
    }

    .img-placeholder {
        width: 40px;
        height: 55px;
        border-radius: 4px;
        object-fit: cover;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
    }
    
</style>

<head>
    <title>Movies</title>
</head>
<body>
<h2 class="title">Liste des Films</h2>
<table class="movie-table">
    <thead>
    <tr class="header-row">
        <th>ID</th>
        <th>Nom</th>
        <th>Image</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Id</td>
            <td>
                <a href="/Movie/DetailsList/@movie.Id">
                    @movie.Name
                </a>
            </td>
            <td>
                <img src="~/inception.jpeg" class="img-placeholder" alt="Inception" />
            </td>

        </tr>
    }
    </tbody>
</table>
</body>
</html>