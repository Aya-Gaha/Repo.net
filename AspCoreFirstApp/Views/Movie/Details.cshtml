@model AspCoreFirstApp.Models.ViewModels.MovieCustomerViewModel

@{
    ViewData["Title"] = "Customer details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title mb-0">Customer details</h2>
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">‚Üê Retour</a>
</div>

<div class="card app-card">
    <div class="card-body">
        <h5 class="mb-3">Client</h5>
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@Model.Customer.Id</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Customer.Name</dd>
        </dl>

        <hr />

        <h5 class="mb-3">Movies</h5>
        <ul class="mb-0">
            @foreach (var movie in Model.Movies)
            {
                <li>@movie.Name</li>
            }
        </ul>
    </div>
</div>
