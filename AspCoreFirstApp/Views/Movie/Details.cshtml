@model AspCoreFirstApp.Models.ViewModels.MovieCustomerViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Customer Details</title>
</head>

<style>
    body {
        font-family: "Segoe UI", Roboto, Arial, sans-serif;
        background-color: #f4f6f8;
        padding: 40px 0;
        color: #333;
    }

    .page-container {
        width: 75%;
        margin: auto;
        background-color: white;
        border-radius: 10px;
        padding: 25px 30px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }

    h2, h3 {
        margin-bottom: 15px;
        font-weight: 600;
    }

    .customer-info p {
        line-height: 1.8;
        margin-bottom: 20px;
    }

    .movie-list {
        padding-left: 20px;
    }

    .movie-list li {
        margin-bottom: 6px;
    }
</style>

<body>
<div class="page-container">

<h2>Customer Details</h2>
    <div class="customer-info">
    <p>
        <strong>Id:</strong> @Model.Customer.Id <br/>
        <strong>Namme:</strong>@Model.Customer.Name
    </p>
    </div>
<h3>Movies</h3>
<ul>
    @foreach (var movie in Model.Movies)
    {
        <li>@movie.Name</li>
    }
</ul>
</div>
</body>
</html>