@model AspCoreFirstApp.Models.Customer

@{
    ViewData["Title"] = "Détails du client";
}

<h2>Détails du client</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">

            <dt class="col-sm-3">Nom</dt>
            <dd class="col-sm-9 fw-semibold">
                @Model.Name
            </dd>

            <dt class="col-sm-3">DiscountRate</dt>
            <dd class="col-sm-9">
                @Model.MembershipType?.DiscountRate
            </dd>

        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary"
       asp-action="Edit"
       asp-route-id="@Model.Id">
        Modifier
    </a>

    <a class="btn btn-outline-secondary"
       asp-action="Index">
        ← Retour à la liste
    </a>
</div>
