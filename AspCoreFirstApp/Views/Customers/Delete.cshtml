@model AspCoreFirstApp.Models.Customer

@{
    ViewData["Title"] = "Supprimer le client";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title mb-0">Supprimer le client</h2>
    <a class="btn btn-outline-secondary" asp-action="Index">← Retour</a>
</div>

<div class="card app-card border border-danger-subtle">
    <div class="card-body">
        <p class="mb-3">Confirme la suppression de ce client. Cette action est <strong>irréversible</strong>.</p>

        <form asp-action="Delete" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="col-12">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-danger">Supprimer</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Annuler</a>
            </div>
        </form>
    </div>
</div>
