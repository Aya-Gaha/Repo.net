@model IEnumerable<AspCoreFirstApp.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="page-title mb-0">Customers</h2>
        <div class="text-muted small">@Model.Count() client(s)</div>
    </div>
    <div class="page-actions">
        <a class="btn btn-primary" asp-action="Create">+ Cr√©er un client</a>
    </div>
</div>

<div class="card app-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-primary">
                <tr>
                    <th>Nom</th>
                    <th>DiscountRate</th>
                    <th class="text-end pe-3" style="width:220px">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td class="fw-semibold">@customer.Name</td>
                        <td>@customer.MembershipType?.DiscountRate</td>
                        <td class="text-end pe-3">
                            <div class="page-actions justify-content-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@customer.Id">Details</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
