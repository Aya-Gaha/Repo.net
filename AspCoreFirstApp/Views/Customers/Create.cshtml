@model AspCoreFirstApp.Models.Customer

@{
    ViewData["Title"] = "Créer un client";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title mb-0">Créer un client</h2>
    <a class="btn btn-outline-secondary" asp-action="Index">← Retour</a>
</div>

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <div class="fw-semibold mb-1">Erreurs de validation</div>
        <ul class="mb-0">
            @foreach (var err in (IEnumerable<string>)ViewBag.Errors)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}

<div class="card app-card">
    <div class="card-body">
        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()

            <div class="col-12">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="MembershipTypeId" class="form-label">Membership Type</label>
                <select asp-for="MembershipTypeId" class="form-select" asp-items="(SelectList)ViewBag.MembershipTypes">
                    <option value="">-- Choisir --</option>
                </select>
                <span asp-validation-for="MembershipTypeId" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Créer</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
